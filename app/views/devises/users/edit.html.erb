<% provide(:title, t("edit")) %>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="animation-fadeIn sd-cof">
      <div class="login-title text-center">
        <h1>
          <small class="sml-cof">
            <strong><%= t "edit" %></strong>
          </small>
        </h1>
      </div>
      <div class="block push-bit">
        <%= form_for(resource, as: resource_name, html: {class: "form-horizontal form-bordered
          form-control-borderless", id: "form-login", method: :put},
            url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>
          <div class="form-group">
            <div class="col-xs-12">
              <div class="input-group">
                <span class="input-group-addon">
                  <i class="fa fa-address-book" aria-hidden="true"></i>
                </span>
                <%= f.text_field :name, autofocus: true, class: "form-control input-lg",
                  placeholder: t("passwords.new.name") %>
              </div>
            </div>
          </div>
          <div class="form-group">
            <div class="col-xs-12">
              <div class="input-group">
                <span class="input-group-addon"><i class="gi gi-envelope"></i></span>
                <%= f.email_field :email, autofocus: true, class: "form-control input-lg",
                  placeholder: t("passwords.new.email") %>
              </div>
            </div>
          </div>
          <div class="form-group">
            <div class="col-xs-12">
              <div class="input-group">
                <span class="input-group-addon"><i class="fa fa-phone" aria-hidden="true"></i></span>
                <%= f.text_field :phone, autofocus: true, class: "form-control input-lg",
                  placeholder: t("passwords.new.phone") %>
              </div>
            </div>
          </div>
          <div class="form-group">
            <div class="col-xs-12">
              <div class="input-group">
                <span class="input-group-addon">
                  <i class="fa fa-address-card-o" aria-hidden="true"></i>
                </span>
                <%= f.text_field :address, autofocus: true, class: "form-control input-lg", placeholder: t("passwords.new.address") %>
              </div>
            </div>
          </div>
          <div class="form-group">
            <div class="col-xs-12">
              <div class="input-group">
                <span class="input-group-addon">
                  <i class="fa fa-birthday-cake" aria-hidden="true"></i>
                </span>
                <%= f.text_field :birthday, "data-provide" => "datepicker", class: "form-control input-lg" %>
              </div>
            </div>
          </div>
          <div class="form-group">
            <div class="col-xs-12">
              <div class="input-group">
                <span class="input-group-addon"><i class="gi gi-asterisk"></i></span>
                <%= f.password_field :password, class: "form-control input-lg",
                  placeholder: t("passwords.new.password") %>
              </div>
            </div>
          </div>
          <div class="form-group">
            <div class="col-xs-12">
              <div class="input-group">
                <span class="input-group-addon"><i class="gi gi-asterisk"></i></span>
                <%= f.password_field :password_confirmation, class: "form-control input-lg",
                  placeholder:t("passwords.new.password_confirm") %>
              </div>
            </div>
          </div>
          <div class="field">
            <div class="col-xs-12">
              <div class="input-group">
                <span class="input-group-addon"><i class="gi gi-asterisk"></i></span>
                <%= f.label :current_password %><i><%= t "registrations.new.current" %></i><br />
                <%= f.password_field :current_password, class: "form-control" %>
              </div>
            </div>
          </div>
          <div class="form-group form-actions">
            <div class="col-xs-12 text-right">
              <%= f.submit t("registrations.new.update"), class: "btn btn-sm btn-success" do  %>
                <i class="fa fa-plus"></i>
              <% end %>
            </div>
          </div>
        <% end %>
        <p>
          <%= t "registrations.new.uphappy" %>
          <%= button_to t("registrations.new.cancel"),
            registration_path(resource_name), data: {confirm: t("passwords.new.are_you")},
              method: :delete, class: "btn btn-sm btn-success" %>
        </p>
      </div>
    </div>
  </div>
</div>
