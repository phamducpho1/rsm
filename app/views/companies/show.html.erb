<% provide(:title, t("company")) %>
<% provide(:banner, t("banner_show")) %>
<div class="cp_tab_content cp_our_jobs_section">
  <div class="container">
    <div class="panel-group">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h4 class="panel-title">
            <a data-toggle="collapse" aria-expanded="true" aria-controls="jobsListing"
              href="#jobsListing" class="collapse-jobs-listing color_view_job">
              <%= t "view_all_job" %>
              <span><i class="fa fa-angle-down"></i></span></a>
          </h4>
        </div>
        <div id="jobsListing" class="panel-collapse cp_our_jobs_container collapse in" aria-expanded="true" style="">
          <div class="panel-body">
            <div class="cp_our_jobs_listing" id="ajax_cp_our_jobs_listing">
              <div class = show_companies>
                <div class="row">
                  <% if can? :update, @company %>
                    <div class="create-job-modal">
                      <button type="button" class="btn btn-info btn-lg post-job" id="post-job-btn"
                        data-toggle="modal" data-target="#JobModal">
                        <%= t "post_job" %>
                      </button>
                      <div class="modal fade" id="JobModal" role="dialog">
                        <div class="modal-dialog job-modal-dialog">
                          <div class="modal-content">
                            <div class="modal-header">
                              <button type="button" class="close" data-dismiss="modal">&times;</button>
                              <h4 class="modal-title"><%= t "post_job" %></h4>
                            </div>
                            <div class="modal-body" id="job-create-form">
                              <%= render "jobs/form" %>
                            </div>
                            <div class="modal-footer">
                              <button type="button" class="btn btn-default" data-dismiss="modal">
                                <%= t ".close" %>
                              </button>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                  <% end %>
                  <div class="col-md-12 col-md-offset-0 show_jobs">
                    <% if @jobs.any? %>
                      <h3 class="jobs-count">
                        <%= t ".jobs" %>
                        <span id="jobs-numbers"><%= @jobs.total_count %></span>
                      </h3>
                      <div id="jobs">
                        <%= render @jobs %>
                      </div>
                    <% else %>
                      <h3><%= t ".jobs" %></h3>
                      <div id="jobs">
                        <div class="no_jobs"><%= t".no_jobs" %></div>
                      </div>
                    <% end %>
                    <div class = "row text-center pag">
                      <%= paginate @jobs %>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
