<% provide(:title, t("users.new.title")) %>

<div class="row">
  <div class="col-md-5 col-md-offset-4">
    <div class="login-title text-center">
      <h1><strong><%= t "registrations.new.register"%></strong></h1>
    </div>
    <div id="login-container" class="animation-fadeIn">
      <%= form_for(resource, as: resource_name, class: "form-horizontal form-bordered form-control-borderless ", url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>
          <div class="form-group">
              <div class="col-xs-12">
                <div class="input-group">
                  <span class="input-group-addon"><i class="fa fa-user-o" aria-hidden="true"></i></i></span>
                  <%= f.text_field :name, autofocus: true, class: "form-control input-lg", placeholder: t("passwords.new.name"),required: true %>
                </div>
                <div class="input-group">
                  <span class="input-group-addon"><i class="fa fa-envelope-o"></i></i></span>
                  <%= f.email_field :email, autofocus: true, class: "form-control input-lg", placeholder: t("passwords.new.email") %>
                </div>
                <div class="input-group">
                  <span class="input-group-addon"><i class="fa fa-mobile"></i></span>
                  <%= f.text_field :phone, autofocus: true, class: "form-control input-lg", placeholder: t("passwords.new.phone"),required: true %>
                </div>
                <div class="input-group">
                  <span class="input-group-addon"><i class="fa fa-address-book-o"></i></i></span>
                  <%= f.text_field :address, autofocus: true, class: "form-control input-lg", placeholder:t("passwords.new.address"),required: true %>
                </div>
                <div class="input-group">
                  <span class="input-group-addon"><i class="fa fa-birthday-cake"></i></span>
                  <%= f.text_field :birthday, "data-provide" => "datepicker", class: "form-control input-lg" %>
                </div>
                <div class="input-group">
                  <span class="input-group-addon"><i class="fa fa-certificate" aria-hidden="true"></i></i></span>
                  <%= f.password_field :password,class: "form-control input-lg", placeholder: t("passwords.new.password") %>
                </div>
                <div class="input-group">
                  <span class="input-group-addon"><i class="fa fa-certificate" aria-hidden="true"></i></i></span>
                  <%= f.password_field :password_confirmation,class: "form-control input-lg", placeholder:t("passwords.new.password_confirm") %>
                </div><br>

                <div class="input-group">
                  <div class="btn-group radio-group">
                    <label class="btn btn-primary not-active"><%= t"male" %><%= f.radio_button :sex,Settings.male %></label>
                    <label class="btn btn-primary not-active"><%= t"female" %><%= f.radio_button :sex, Settings.female %></label>
                  </div>
                </div>
                <div class="col-xs-12 text-right">
                  <%= f.submit t("registrations.new.re_account"), class: "btn btn-sm btn-success " %>
                </div>
              </div>
          </div>
          <div class="form-group">
              <div class="col-xs-12 text-center">
                <small><%= t("registrations.new.account")%></small> <%= link_to t("registrations.new.login"), new_user_session_path  %>
              </div>
          </div>
      <% end %>
    </div>
  </div>
</div>
</br>

