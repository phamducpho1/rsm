<%- if controller_name != t("registrations.new.session") %>
  <%= link_to t("registrations.new.login"), new_session_path(resource_name) %><br />
<% end -%>

<%- if devise_mapping.registerable? && controller_name != t("registrations.new.registration") %>
  <%= link_to t("registrations.new.signup"), new_registration_path(resource_name) %><br />
<% end -%>

<%- if devise_mapping.recoverable? && controller_name != t("registrations.new.passwords") && controller_name != t("registrations.new.registration") %>
  <%= link_to t("registrations.new.forgot"), new_password_path(resource_name) %><br />
<% end -%>

<%- if devise_mapping.confirmable? && controller_name != t("registrations.new.confirmations") %>
  <%= link_to t("registrations.new.received"), new_confirmation_path(resource_name) %><br />
<% end -%>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != t("registrations.new.unlocks") %>
  <%= link_to t("registrations.new.have_unlock"), new_unlock_path(resource_name) %><br />
<% end -%>
