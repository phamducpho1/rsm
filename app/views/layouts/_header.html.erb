<header>
  <div class="container">
    <%= link_to root_path, class: "site-logo" do %>
      <i class="fa fa-gg" aria-hidden="true"></i>
      <strong><%= t "index.fram" %></strong><%= t "index.recruit" %>
    <% end %>
    <nav>
      <a href="javascript:void(0)" class="btn btn-default site-menu-toggle visible-xs visible-sm">
        <i class="fa fa-bars"></i>
      </a>
      <ul class="site-nav">
        <li class="visible-xs visible-sm">
          <a href="javascript:void(0)" class="site-menu-toggle text-center">
            <i class="fa fa-times"></i>
          </a>
        </li>
        <li>
          <a href="javascript:void(0)" class="site-nav-sub"><i class="fa fa-angle-down site-nav-arrow"></i><%= t "index.home" %></a>
          <ul>
            <li>
              <a href="index.html"><%= t "index.home" %></a>
            </li>
          </ul>
        </li>
        <li class="active">
          <a href="javascript:void(0)" class="site-nav-sub"><i class="fa fa-angle-down site-nav-arrow"></i><%= t "index.home" %></a>
          <ul>
            <li>
              <a href="blog.html" class="active"><%= t "index.home" %></a>
            </li>
          </ul>
        </li>
        <% if user_signed_in? %>
          <li>
            <a href="about.html"><%= t "index.home" %></a>
            <ul>
              <li>
                <%= link_to edit_user_registration_path(current_user) do %>
                  <%= t "users.new.profile" %>
                  <i class="fa fa-user fa-fw pull-right"></i>
                <% end %>
              </li>
              <li>
                <%= link_to destroy_user_session_path, method: :delete do %>
                  <i class="fa fa-ban fa-fw pull-right"></i>
                  <%= t("layouts._header.logout") %>
                <% end %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("users.new.login"), new_user_session_path %></li>
        <% end %>
        </ul>
    </nav>
  </div>
</header>
<section class="site-section site-section-light site-section-top themed-background-dark">
  <div class="container">
    <h1 class="animation-slideDown"><strong><%= t "index.latest" %></strong></h1>
    <h2 class="h3 animation-slideUp"><%= t "index.home" %></h2>
  </div>
</section>
