<%= simple_form_for resource, as: resource_name, url: registration_path(resource_name),
  html: {id: "form-register"}, remote: true do |f| %>
  <div class="form-group registrations-error display-none">
    <div class="col-xs-12">
      <p class="color-red text-center"></p>
      <span class="close-error">&times;</span>
    </div>
  </div>
  <div class="form-group input-inline <%= add_class_if_resource_has_error resource.errors[:name] %>">
    <div class="col-xs-12">
      <div class="input-group">
        <span class="input-group-addon"><i class="fa fa-address-book" aria-hidden="true"></i></span>
        <%= f.text_field :name, autofocus: true, class: "form-control input-lg",
          placeholder: t(".name") %>
      </div>
      <div class="error-message animation-slideDown">
        <%= f.full_error :name %>
      </div>
    </div>
  </div>
  <div class="form-group input-inline <%= add_class_if_resource_has_error resource.errors[:email] %>">
    <div class="col-xs-12">
      <div class="input-group">
        <span class="input-group-addon"><i class="fa fa-envelope"></i></span>
        <%= f.email_field :email, class: "form-control input-lg",
          placeholder: t(".email") %>
      </div>
      <div class="error-message animation-slideDown">
        <%= f.full_error :email %>
      </div>
    </div>
  </div>
  <div class="form-group input-inline <%= add_class_if_resource_has_error resource.errors[:password] %>">
    <div class="col-xs-12">
      <div class="input-group">
        <span class="input-group-addon"><i class="fa fa-key"></i></span>
        <%= f.password_field :password, class: "form-control input-lg",
          placeholder: t(".password") %>
      </div>
      <div class="error-message animation-slideDown">
        <%= f.full_error :password %>
      </div>
    </div>
  </div>
  <div class="form-group input-inline <%= add_class_if_resource_has_error resource.errors[:password_confirmation] %>">
    <div class="col-xs-12">
      <div class="input-group">
        <span class="input-group-addon"><i class="fa fa-key"></i></span>
        <%= f.password_field :password_confirmation, class: "form-control input-lg",
          placeholder:t(".password_confirm") %>
      </div>
      <div class="error-message animation-slideDown">
        <%= f.full_error :password_confirmation %>
      </div>
    </div>
  </div>
  <div class="form-group input-inline">
    <div class="col-xs-12">
      <div class="input-group">
        <span class="input-group-addon"><i class="fa fa-phone" aria-hidden="true"></i></span>
        <%= f.text_field :phone, class: "form-control input-lg",
          placeholder: t(".phone") %>
      </div>
    </div>
  </div>
  <div class="form-group input-inline">
    <div class="col-xs-12">
      <div class="input-group">
        <span class="input-group-addon"><i class="fa fa-birthday-cake" aria-hidden="true"></i></span>
        <%= f.text_field :birthday, class: "datepick form-control input-lg",
          placeholder: t(".birthday") %>
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class="col-xs-12">
      <div class="input-group">
        <span class="input-group-addon"><i class="fa fa-address-card-o" aria-hidden="true"></i></span>
        <%= f.text_field :address, class: "form-control input-lg",
          placeholder: t(".address") %>
      </div>
    </div>
  </div>
  <div class="form-group text-center p-15">
    <%= f.button :submit, class: "btn btn-sm btn-primary" do %>
      <%= t ".login_to" %>
    <% end %>
  </div>
  <div class="form-group text-center p-15">
    <a href="javascript:void(0)" class="link-login">
    <small><%= t ".login" %></small></a>
  </div>
<% end %>

<%= javascript_include_tag "company/login", "data-turbolinks-track": "reload" %>
