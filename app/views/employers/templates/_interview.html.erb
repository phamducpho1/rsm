<div class="modal fade" id="body_template_<%= interviewer.id %>" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title"><%= t".body" %></h4>
      </div>
      <div class="modal-body" id="template_<%= interviewer.id %>">
        <%= interviewer.template_body.html_safe %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal"><%= t ".close" %></button>
      </div>
    </div>
  </div>
</div>
<tr class="employer-template-<%= interviewer.id %>">
  <td class="text-center"><%= count_page interviewer_counter, @page %></td>
  <td class="text-center"><%= interviewer.name %></td>
  <td class="text-center">
    <div class="col-md-4"></div>
    <div class="col-md-4">
      <button type="button" class = "show-inter form-control" value="<%= interviewer.id %>">
        <%= t ".show" %>
      </button>
    </div>
  </td>
  <td class="text-center">
    <div class="btn-group btn-group-xs">
      <%= link_to edit_employers_template_path(interviewer), remote: true,
        class: "btn btn-warning btn-xs", data: {toggle: "tooltip"} do %>
        <i class="fa fa-pencil" aria-hidden="true"></i>
      <% end %>
      <%= link_to employers_template_path(interviewer), method: :delete, remote:true,
        class: "btn btn-danger btn-xs", data: {confirm: (t ".sure")} do %>
        <i class="fa fa-trash-o" aria-hidden="true"></i>
      <% end %>
    </div>
  </td>
</tr>
