<div class="stepwizard col-md-offset-3">
  <div class="stepwizard-row setup-panel">
    <div class="stepwizard-step">
      <%= link_to Settings.step.step_1, "javascript:void(0)",
        class: "btn btn-primary btn-circle btn-step-1" %>
      <p><%= step %></p>
    </div>
    <div class="stepwizard-step">
      <%= link_to Settings.step.step_2, "javascript:void(0)",
        class: "btn btn-primary btn-circle btn-step-2",
        disabled: true %>
      <p><%= t ".survey" %></p>
    </div>
  </div>
</div>
