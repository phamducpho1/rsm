<div class="create-job-modal" id ="apply_button">
  <button type="button" class="btn btn-primary btn-lg post-job"
    data-toggle="modal" data-target="#JobModal">
    <%= t "apply.applynow" %>
  </button>
  <div class="modal fade" id="JobModal" role="dialog">
    <div class="modal-dialog job-modal-dialog">
      <div class="modal-content opacity-apply">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">
            <%= t "apply.apply_for" %>
            <strong class="title-modal">
              <%= @job.name %>
              (<%= t "apply.slary" %>
              <%= @job.min_salary.round.to_s + Settings.currency.dollar %> -
              <%= t "apply.working" %><%= @company.address %>)
            </strong>
          </h4>
        </div>
        <div class="modal-body modal-create-form" id="job-create-form">
          <div class="container bootstrap snippet">
            <div class="panel-body inf-content">
              <div class="row">
                <div class="col-md-3">
                  <% if current_user.picture.present? %>
                    <%= image_tag current_user.picture.url, class: "img-circle img-thumbnail isTooltip",
                      size: Settings.img_cv %>
                  <% else %>
                    <%= image_tag "avatar_2x.png", class: "img-responsive" %>
                  <% end %>
                </div>
                <div class="col-md-5">
                  <strong><%= t "apply.information" %></strong><br>
                  <div class="table-responsive">
                    <table class="table table-condensed table-responsive table-user-information">
                      <tbody>
                        <tr>
                          <td>
                            <strong>
                              <span class="glyphicon glyphicon-user text-primary"></span>
                              <%= t "apply.name" %>
                            </strong>
                          </td>
                          <td class="text-primary">
                            <%= current_user.name %>
                          </td>
                        </tr>
                        <tr>
                          <td>
                            <strong>
                              <span class="glyphicon glyphicon-envelope text-primary"></span>
                              <%= t "apply.email" %>
                            </strong>
                          </td>
                          <td class="text-primary">
                            <%= current_user.email %>
                          </td>
                        </tr>
                        <tr>
                          <td>
                            <strong>
                              <span class="glyphicon glyphicon-asterisk text-primary"></span>
                              <%= t "apply.address" %>
                            </strong>
                          </td>
                          <td class="text-primary">
                            <%= current_user.address %>
                          </td>
                        </tr>
                         <tr>
                          <td>
                            <strong>
                              <span class="glyphicon glyphicon-phone text-primary"></span>
                              <%= t "apply.phone" %>
                            </strong>
                          </td>
                          <td class="text-primary">
                            <%= current_user.phone %>
                          </td>
                        </tr>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
            </div>
          <%= simple_form_for @apply , remote: :true, class: "form-horizontal form-bordered" do |f| %>
            <%= f.hidden_field :job_id %>
            <%= f.hidden_field :user_id %>
            <div class="row">
              <table class="col-md-12 table table-condensed table-responsive table-user-information">
                <%= f.simple_fields_for :information do |p| %>
                  <%= p.hidden_field :name, value: current_user.name %>
                  <%= p.hidden_field :email, value: current_user.email %>
                  <%= p.hidden_field :phone, value: current_user.phone %>
                  <tr>
                    <td>
                      <strong>
                        <span class="glyphicon glyphicon-asterisk text-primary"></span>
                        <%= t "apply.introducing" %>
                      </strong>
                      <%= p.text_area :introducing, class: "form-control ckeditor", cols: Settings.text_area.cols,
                        rows: Settings.text_area.rows %>
                    </td>
                  </tr>
                <% end %>
              </table>
            </div>
            <div class="row">
              <table class="col-md-12 table table-condensed table-responsive">
              <tr>
                <td>
                  <i class="fa fa-book fa-fw"></i><span><%= t "apply.news_cv" %></span>
                  <label class="switch switch-primary">
                    <input type="checkbox" id="checkcv" name="checkcv" value="1">
                    <span></span>
                  </label>
                </td>
              </tr>

              <tr class="files_field">
                <td>
                  <strong class="col-md-3">
                    <span class="glyphicon glyphicon-tag text-primary"></span>
                    <%= t "apply.new_cv" %>
                  </strong>
                  <span class="btn btn-default btn-file col-md-2">
                    <%= t "downloads.browse" %><%= f.file_field :cv, id: "file_cv", class: "transparent absolute" %>
                  </span>
                </td>
              </tr>
              <tr>
                <td>
                  <button type="button" class="btn btn-sm btn-default pull-right btn-close-apply" data-dismiss="modal" id ="reset-job">
                    <%= t ".close" %>
                  </button>
                  <button type="submit" class="btn btn-sm btn-warning pull-right load-page">
                    <i class="fa fa-repeat"></i><%= t "apply.apply" %>
                  </button>
                </td>
              </tr>
              </table>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>


